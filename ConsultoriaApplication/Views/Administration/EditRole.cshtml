@model ConsultoriaApplication.Models.ViewModel.RoleEditViewModel

@{ 
    ViewBag.Title = "Edit Role";
}

<div class="container text-white">
    <h1>Editar nivel de acesso</h1>

    <form method="post" class="mt-3">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group row">
            <label for="Id" class="col-sm-2 col-form-label">Id</label>
            <div class="col-sm-10">
                <input type="text" asp-for="Id" class="form-control" id="Id" disabled readonly>
            </div>
        </div>
        <div class="form-group row">
            <label for="role" class="col-sm-3 col-form-label">Nome nível de acesso</label>
            <div class="col-sm-9">
                <input type="text" asp-for="RoleName" class="form-control" id="role" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Atualizar</button>
                <a asp-action="ListRoles" class="btn btn bg-secondary">Voltar</a>
            </div>
        </div>
    </form>
    <div class="card bg-dark">
        <div class="card-header">
            <h3>Usuarios com esse nível de acesso</h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Nenhum adicionado</h5>
            }
        </div>
        <div class="card-footer">
            <a class="btn btn-info text-light" asp-controller="Administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Adicionar/Remover usuario</a>
        </div>
    </div>


</div>
