@model ConsultoriaApplication.Models.ViewModel.LogInViewModel

<div class="container rounded bg-dark text-white">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8"><h1 class="h1 mt-4 mb-4">Login</h1></div>
    </div>    
    <div class="row text-white">
        <div class="col-2">
        </div>
        <form asp-action="LogIn" class="col-8 mb-4">
            <div asp-validation-summary="All" class="text-white"></div>
            <div class="form-group">
                <label for="pwd">Email</label>
                <input type="email" asp-for="Email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Digite Email" required>
            </div>
            <div class="form-group">
                <label for="pwd">Senha</label>
                <input asp-for="Password" type="password" class="form-control" id="pwd" required />
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label for="RememberMe">
                        Lembrar
                        <input asp-for="RememberMe" type="checkbox" id="RememberMe" />
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>
    
</div>

