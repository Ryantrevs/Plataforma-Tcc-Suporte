@model ConsultoriaApplication.Models.ViewModel.RegisterViewModel

<div class="container bg-dark ">
    <div class="row text-white">
        <div class="col-2"></div>
        <div class="col-8 h1 mt-4 mb-4">Cadastrar</div>
    </div>
    <div class="row text-white">
        <div class="col-2"></div>
        <form asp-action="Register" class="col-8 mb-4 mt-4">
            <div asp-validation-summary="All" class="text-white"></div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input asp-for="Nome" type="text" class="form-control" id="nome" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" asp-for="Email" onblur="verificaEmail()" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Digite Email" required>
                <div id="validEmailCheck" class="text-danger"></div>
            </div>
            <div class="form-group">
                <label for="pwd">Senha</label>
                <input asp-for="Password" type="password" class="form-control" id="pwd" required />
            </div>

            <button type="submit" class="btn btn-primary">Registrar</button>
        </form>
    </div>
</div>



