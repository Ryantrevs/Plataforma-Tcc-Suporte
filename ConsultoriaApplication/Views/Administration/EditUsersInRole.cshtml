@model List<ConsultoriaApplication.Models.ViewModel.UserRoleViewModel>
@{
    var roleId = ViewBag.roleId;
}
<div class="container">
    <form asp-controller="Administration" asp-action="EditUsersInRole">
        <div class="card bg-dark text-white">
            <div class="card-header">
                <h2>Adicione ou remova usuários deste nivel de acesso</h2>               
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].UserId" readonly />
                        <input type="hidden" asp-for="@Model[i].UserName" readonly />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected" class="form-check-label">
                            Usuário: @Model[i].UserName,Email: @Model[i].UserEmail
                        </label>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="hidden" asp-for="@roleId" value="@roleId" />
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-controller="Administration" asp-action="EditRole" asp-route-Id="@roleId" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>
