@model ConsultoriaApplication.Models.ViewModel.UserClaimsViewModel
<div class="container">
    <form method="post" asp-controller="Administration" asp-action="ManageUserClaims">
        <div class="card">
            <div class="card-header">
                <h2>Gerenciar claim de usuario</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Claims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                        <input type="checkbox" asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                            @Model.Claims[i].ClaimType
                        </label>
                    </div>
                }
                <div class="text-danger" asp-validation-summary="All"></div>
            </div>
            <div class="card-footer">
                <input type="hidden" asp-for="@Model.UserId" readonly />
                <input type="submit" value="Atualizar" class="btn btn-primary" />
                <a asp-action="EditUser" asp-route-Id="@Model.UserId" class="btn btn-secondary">Cancelar</a>
            </div>
        </div>
    </form>
</div>
