@model ConsultoriaApplication.Models.ViewModel.ProfileViewModel
@{
    ViewBag.Title = "Editar Perfil";
}

<div class="container">
    
    <div class="row justify-content-center text-white  rounded bg-dark">
        <form asp-action="EditProfile" asp-controller="Account" class="col-8 mb-4" method="post">
            <h1 class="mb-4 mt-4 h1 text-white">Editar Perfil</h1>
            <div asp-validation-summary="All" class="text-white"></div>
            <div class="form-group" style="display:none;">
                <label for="id">id</label>
                <input type="text" asp-for="@Model.user.Id" class="form-control" id="id" readonly>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" asp-for="@Model.user.Email" class="form-control" id="email" required>
            </div>
            <div class="form-group">
                <label for="nome">Nome</label>
                <input asp-for="@Model.user.Nome" type="text" class="form-control" id="nome" required />
            </div>
            <button type="submit" class="btn btn-primary">Atualizar</button>
            <a class="btn btn-secondary" asp-controller="Account" asp-action="Profile">Voltar</a>
        </form>
    </div>
</div>
